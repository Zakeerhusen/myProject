<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="corelabs.ChangePassword"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="pageClass">
		<content>
			<Panel headerText="Change Password" width="50%" expandable="false"
				class="panelCSS">
				<content>
					<l:Grid defaultSpan="L6 M6 S12" vSpacing="1" hSpacing="1"
						position="Center">
						<l:content>
							<Label text="Old Password" class="labelCSS" width="100%" />
							<Input id="oldpwdipt" type="Password" maxLength="14"/>
							<Label text="New Password" class="labelCSS" width="100%" />
							<Input id="newpwdipt" type="Password" maxLength="14"/>
							<Label text="Re-Enter Password" class="labelCSS" width="100%" />
							<Input id="renewpwdipt" type="Password" maxLength="14"/>
						</l:content>
					</l:Grid>
					
					<l:Grid defaultSpan="L12 M12 S12" vSpacing="1" hSpacing="1"
						position="Center">
						<l:content>
							<Text text="*Note: Password must be 8-14 alphanumeric characters" class="label_ashCSS" />
						</l:content>
					</l:Grid>
					
					<HBox justifyContent="End" class="clearReportBtn">
						<Button text="Confirm" type="Emphasized" width="110px" press="validate"/>
					</HBox>
				</content>
			</Panel>
		</content>
	</Page>
</core:View>