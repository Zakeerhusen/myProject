<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog title="Add Comments.">
		<Panel class="BoxClassMargin">
			<Label text="Comments" class="gridLblClass gridClass" required="true" />
			<TextArea id="taskapprComm" width="18rem" maxLength="499"/>
			<VBox class="gridClass">
				<HBox alignItems="End" justifyContent="End">
					<Button text="Cancel" width="100px" press="closeDialog" type="Emphasized" />
					<Label text="" width="10px" />
					<Button text="Submit" width="100px" press="pendingTask" type="Accept" />
				</HBox>
			</VBox>
		</Panel>
	</Dialog>
</core:FragmentDefinition>
